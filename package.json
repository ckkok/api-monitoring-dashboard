{
  "name": "api-status-dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "An API status monitoring dashboard",
  "author": "Maltem Consulting Group",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
